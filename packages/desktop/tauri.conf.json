{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ShardDen",
  "identifier": "com.shardden.app",
  "build": {
    "beforeDevCommand": "cd ../web && npm run dev",
    "beforeBuildCommand": "cd ../web && npm run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../web/dist"
  },
  "app": {
    "windows": [
      {
        "title": "砾穴 ShardDen",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "default",
          "windows": ["main"],
          "permissions": [
            "path:default",
            "event:default",
            "window:default",
            "app:default",
            "image:default",
            "resources:default",
            "menu:default",
            "tray:default",
            "shell:allow-open"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "dmg", "appimage"],
    "icon": [],
    "resources": [],
    "copyright": "Copyright (c) 2026",
    "category": "DeveloperTool",
    "shortDescription": "Developer toolkit platform",
    "longDescription": "A modular developer toolkit platform with JSON extraction and more tools."
  }
}
